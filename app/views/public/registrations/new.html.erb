<p id="notice"></p>
<div class="container">

  <div class="row">

    <h5 class="bg-light text-dark">新規会員登録</h5>
  </div>


  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="row mb-3">
    <%= f.label :名前, class: "col-md-2 col-form-label" %>
    <%= f.label :"(姓)", class: "col-md-1 col-form-label" %>
    <div class="col-md-3">
      <%= f.text_field :last_name, placeholder: "令和", class: "form-control" %>
    </div>
    <%= f.label :"(名)", class: "col-md-1 col-form-label" %>
    <div class="col-md-3">
      <%= f.text_field :first_name, placeholder: "道子", class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :フリガナ, class: "col-md-2 col-form-label" %>
    <%= f.label :"(セイ)", class: "col-md-1 col-form-label" %>
    <div class="col-md-3">
      <%= f.text_field :last_name_kana, placeholder: "レイワ", class: "form-control" %>
    </div>
    <%= f.label :"(メイ)", class: "col-md-1 col-form-label" %>
    <div class="col-md-3">
      <%= f.text_field :first_name_kana, placeholder: "ミチコ", class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :メールアドレス, class: "col-md-3 col-form-label" %>
    <div class="col-md-3">
      <%= f.text_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
    </div>
  </div>
  

  <div class="row mb-3">
    <%= f.label :"郵便番号（ハイフンなし)", class: "col-md-3 col-form-label" %>
    <div class="col-md-3">
    <%= f.text_field :postal_code, placeholder: "0000000", class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :住所, class: "col-md-3 col-form-label" %>
    <div class="col-md-7">
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :"電話番号（ハイフンなし）", class: "col-md-3 col-form-label" %>
    <div class="col-md-3">
    <%= f.text_field :telephone_number, placeholder: "0000000000", class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3">
      <%= f.label :パスワード, class: "col-form-label" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
    </div>
    <div class="col-md-3">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :"パスワード(確認用)", class: "col-md-3 col-form-label" %>
    <div class="col-md-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 offset-md-3">
    <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  </div>

  <% end %>


  <div class="row">
    <h5 class="bg-light text-dark">既に登録済みの方</h5>
  </div>

  <div class="row">
    <div class="offset-md-1"><%= render "public/shared/links" %></div>
    <div>からログインしてください。</div>
  </div>


</div>


