<div>
  <p>ジャンル検索</p>
  <% @genres.each do |genre| %>
    <%= genre.name %>
  <% end %>
</div>

<div>
  <%= image_tag @item.get_image(400,300) %>
</div>

<div>
  <p><strong><%= @item.name %></strong></p>
  <p><%= @item.introduction %></p>
  <p><strong>¥<%= (@item.price * 1.1).round.to_s(:delimited) %></strong>(税込)</p>

  <%= form_with model: @item, url: item_path(@item) do |f| %>
  <%= f.number_field :amount, placeholder: "個数選択", min: 1 %>
  <% end %>




  <%= link_to "カートに入れる", cart_items_path, class: "btn btn-success btn-sm" %>
</div>