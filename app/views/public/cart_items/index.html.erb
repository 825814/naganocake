<h5>ショッピングカート</h5>

<%= link_to "カートを空にする", cart_items_destroy_all_path, class: "btn btn-danger", method: :delete %>

 <table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%= @cart_items.each do |cart_item| %>
    <tr>
      <td><%= image_tag cart_item.item.get_image(40,30) %><%= cart_item.item.name %></td>

      <td><%= (cart_item.item.price * 1.1).round.to_s(:delimited) %></td>

      <td>
        <%= form_with model: cart_item, url: cart_item_path(cart_item) do |f| %>
        <%= f.hidden_field :title, :value => "naganocake" %>
        <%= f.select :amount, *[1..20] %>
        <%= f.submit "変更" %>
        <% end %>
      </td>

      <td><%= (cart_item.item.price * 1.1 * amount).round.to_s(:delimited) %></td>
      <td><%= link_to "削除する", method: :delete, class: "btn btn-danger" %></td>

    <% end %>
    </tr>
  </tbody>
</table>

<%= link_to "買い物を続ける", '/', class: "btn btn-primary" %>

<table>
  <tr>
    <th>合計金額</th>
    <td><%= @cart_items.order.total_payment %></td>
  </tr>
</table>

