<h5>注文履歴詳細</h5>

<div>
  <% @orders.each do |order| %>

<h6>注文情報</h6>
<table>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>支払い方法</th>
      <th>ステータス</th>
      <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
      <td><%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %>
      </td>
      <td><%= order.payment_method %></td>
      <td><%= order.status %></td>
    </tr>
</table>

<h6>請求情報</h6>
<table>
  <tr>
    <th>商品合計</th>
    <th>配送料</th>
    <th><strong>ご請求額</strong></th>

    <td><%= @total += cart_item.subtotal %></td>
    <td><%= order.shipping_cost %></td>
    <td><%= order.total_payment %></td>
  </tr>
</table>

<h6>注文内容</h6>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= order.item.name %></td>
      <td><%= order.item.with_tax_price %></td>
      <td><%= order.cart_item.amount %></td>
      <td><%= order.subtotal %></td>
    </tr>
  </tbody>
</table>


  <% end %>
</div>