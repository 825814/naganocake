<h5>注文情報入力</h5>

<%= form_with model: @order do |f| %>

  <%#= f.label :payment_method, "支払い方法" %><br>
  <%#= f.radio_button :payment_methods, Order.payment_method.key(0) %>
  <%#= f.label :payment_method_credit_card, Order.payment_method.i18n[:credit_card] %><br>
  <%#= f.radio_button :payment_method, Order.payment_method.key(1)%>
  <%#= f.label :payment_method_transfer, Order.payment_method.i18n[:transfer] %>
<div>
  <%= f.label :payment_method, "支払い方法" %><br>
  <%= f.radio_button :payment_method, 0 %>
  <%= f.label :payment_method_credit_card, "クレジットカード" %><br>
  <%= f.radio_button :payment_method, 1 %>
  <%= f.label :payment_method_transfer, "銀行振込" %>
</div>

<div>
  <%= f.label :address, "お届け先" %><br>

  <%= f.radio_button :address, 0, checked: "checked" %>
  <%= f.label :address, "ご自身の住所" %><br>

  〒<%= @order.customer.postal_code %><%= @order.customer.address %><br>
  <%= @order.customer.last_name %><%= @order.customer.first_name %><br>

  <%= f.radio_button :address, 1 %>
  <%= f.label :address, "登録済住所から選択" %><br>

  <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %><br>



  <%= f.radio_button :address, 2 %>
  <%= f.label :address, "新しいお届け先" %><br>

  <% end %>

  <%= form_with model: @address do |f| %>
  <div>
    <%= f.label :"郵便番号（ハイフンなし)" %>
    <%= f.text_field :postal_code, placeholder: "0000000" %>
  </div>

  <div>
    <%= f.label :住所 %>
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>

  <div>
    <%= f.label :宛名 %>
    <%= f.text_field :name, placeholder: "令和道子" %>
  </div>
  <% end %>

<div>
  <%= link_to "確認画面へ進む", confirm_path, class: "btn btn-primary" %>
  <%#= f.submit "確認画面へ進む", class: "btn btn-primary" %>
</div>

