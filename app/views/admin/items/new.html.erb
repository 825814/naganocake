<p id="notice"></p>
<div class="container">

  <div class="row">
    <h5 class="bg-light text-dark">商品新規登録</h5>
  </div>

  <div class="row">
    <%= form_with model: [:admin, @item], method: :post do |f| %>
    <div>
      <%= f.label :image, "商品画像" %>
      <%= f.file_field :image, accept: "image/*" %><br>

      <div class="row mb-3">
        <label for="colFormLabel" class="col-sm-2 col-form-label">商品画像</label>
        <div class="col-sm-10">
          <input type="image" class="form-control" id="colFormLabel"></input>
        </div>
      </div>

      <div class="row mb-3">
        <label for="colFormLabel" class="col-md-3 col-form-label">商品名</label>
        <div class="col-md-9">
          <input type="name" class="form-control" id="colFormLabel" placeholder="商品名">
        </div>
      </div>

      <%#= f.label :name, "商品名" %>
      <%#= f.text_field :name, placeholder: "商品名" %><br>

      <%= f.label :introduction, "商品説明" %>
      <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %><br>


      <%= f.label :genre_id, "ジャンル" %>
      <%= f.collection_select :genre_id, Genre.all, :id,:name,{include_blank: '--選択してください--'} %><br>


      <%= f.label :price, "税抜き価格" %>
      <%= f.text_field :price, placeholder: "1000" %>円<br>

      <%= f.label :is_active, "販売ステータス" %>
      <%= f.radio_button :item, :true %>
      <%= f.label :item, "販売中" %>
      <%= f.radio_button :item, :false %>
      <%= f.label :item, "販売停止中" %><br>

      <%= f.submit '新規登録', class: "btn btn-success" %>
    </div>


    <% end %>

  </div>
</div>