<p id="notice"></p>
<div class="container">

  <div class="row">
    <div class="offset-md-1">
    <h5 class="bg-light text-dark">商品新規登録</h5>
    </div>
  </div>

  <%= form_with model: [:admin, @item], method: :post do |f| %>

  <div class="row mb-3">
    <%= f.label :image, "商品画像", class: "col-md-2 offset-md-2 col-form-label" %>
    <div class="col-md-5">
      <%#= f.file_field :image, accept: "image/*", class: "form-control" %>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :name, "商品名", class: "col-md-2 offset-md-2 col-form-label" %>
    <div class="col-md-5">
      <%= f.text_field :name, placeholder: "商品名", class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :introduction, "商品説明", class: "col-md-2 offset-md-2 form-label" %>
    <div class="col-md-5">
      <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :genre_id, "ジャンル", class: "col-md-2 offset-md-2 form-label" %>
    <div class="col-md-5">
      <%= f.collection_select :genre_id, Genre.all, :id,:name,{include_blank: '--選択してください--'} %>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :price, "税抜き価格", class: "col-md-2 offset-md-2 col-form-label" %>
    <div class="col-md-5">
      <%= f.text_field :price, placeholder: "1000" %>円
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :is_active, "販売ステータス", class: "col-md-2 offset-md-2 col-form-label" %>
    <div class="col-md-5">
      <%= f.radio_button :item, :true %>
      <%= f.label :item, "販売中" %>
      <%= f.radio_button :item, :false %>
      <%= f.label :item, "販売停止中" %>
    </div>
  </div>

  </div class="row">
    <div class="text-center">
      <%= f.submit '新規登録', class: "btn btn-success" %>
    </div>
  </div>

  <% end %>


  </div>
</div>