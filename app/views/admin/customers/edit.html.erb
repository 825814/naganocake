<h2><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h2>

<p>会員ID<%= @customer.id %></p>

<%= form_with model: [:admin, @customer] do |f| %>

<div>
  <%= f.label :"氏名" %>
  <%= f.text_field :last_name %>
  <%= f.text_field :first_name %><br>

  <%= f.label :"フリガナ" %>
  <%= f.text_field :last_name_kana %>
  <%= f.text_field :first_name_kana %><br>

  <%= f.label :postal_code, "郵便番号" %>
  <%= f.text_field :postal_code %><br>

  <%= f.label :address, "住所" %>
  <%= f.text_field :address %><br>

  <%= f.label :telephone_number, "電話番号" %>
  <%= f.text_field :telephone_number %><br>

  <%= f.label :email, "メールアドレス" %>
  <%= f.text_field :email %><br>

  <%= f.label :"会員ステータス" %>
  <%= f.radio_button :is_deleted, :false %>
  <%= f.label :is_deleted, "有効" %>
  <%= f.radio_button :is_deleted, :true %>
  <%= f.label :is_deleted, "退会" %><br>

  <%= f.submit '変更を保存' %>
</div>

<% end %>