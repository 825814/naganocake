<p id="notice"></p>
<div class="container">

  <div class="row">
    <h5 class="bg-light text-dark">ジャンル<strong>一覧・追加</strong></h5>
  </div>

  <div class="row">

    <%= form_with model: [:admin, @genre], method: :post do |f| %>

    <div class="col-md-12">
      <%= f.label :name, "ジャンル名" %>

      <%= f.text_field :name, placeholder: "ジャンル名" %>

      <%= f.submit '新規登録', class: "btn btn-success" %>
    </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-5">

      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
                <%= genre.name %>

            </td>
            <td>
              <%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>

</div>



