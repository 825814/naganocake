<h2>ジャンル<strong>一覧・追加</strong></h2>


<%= form_with model: [:admin, @genre], method: :post do |f| %>

<div>
  <%= f.label :name, "ジャンル名" %>
  <%= f.text_field :name, placeholder: "ジャンル名"  %>

  <%= f.submit '新規登録' %>
</div>

<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td>
          <%= genre.name %>

      </td>
      <td>
        <%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>



